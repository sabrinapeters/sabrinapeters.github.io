{
  "name": "sabrina-peters",
  "private": true,
  "version": "0.1.0",
  "author": "Sabrina Peters <brideeray@gmail.com>",
  "description": "Jekyll Setup for Sabrina's blog",
  "scripts": {
    "start": "bundle exec jekyll serve --incremental",
    "build": "yarn css && jekyll build && yarn images && mv _site public",
    "local-build": "bundle exec jekyll build --incremental",
    "css": "postcss _assets/stylesheets/index.css -o _includes/bundle.css",
    "images": "imagemin _assets/images/**/* --out-dir _site/assets/dists/img"
  },
  "repository": "sabrinapeters/sabrinapeters.github.io",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.6.5",
    "browser-sync": "^2.26.7",
    "cssnano": "^4.1.10",
    "gulp": "^4.0.2",
    "gulp-shell": "^0.7.1",
    "imagemin-cli": "^5.0.0",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.18.2"
  },
  "browserslist": [
    "last 1 version"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "cssnano": {
        "autoprefixer": false,
        "mergeRules": false,
        "filterPlugins": false,
        "discardComments": {
          "removeAll": true
        }
      }
    }
  }
}
